{
  "manifest_version": 3,
  "name": "SgyMinus",
  "version": "1.0",
  "description": "Minimalist Schoology modification framework.",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.schoology.com/*",
    "https://schoology.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}